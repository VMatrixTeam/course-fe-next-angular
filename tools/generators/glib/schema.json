{
  "cli": "nx",
  "id": "glib",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Type of the library",
      "enum": ["data-access", "feature", "ui", "util"],
      "x-prompt": {
        "message": "类型",
        "type": "list",
        "items": [
          {
            "value": "data-access",
            "label": "数据访问 (data-access)"
          },
          {
            "value": "feature",
            "label": "特性 (feature)"
          },
          {
            "value": "ui",
            "label": "纯UI (ui)"
          },
          {
            "value": "util",
            "label": "工具 (util)"
          }
        ]
      }
    },
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "名称",
      "pattern": "^([a-z]+[-]?)+[^-]$"
    },
    "directory": {
      "type": "string",
      "description": "Directory to the library",
      "x-prompt": "所属文件夹，可留空"
    },
    "scope": {
      "type": "string",
      "description": "Scope of the library",
      "x-prompt": "领域，可留空，默认为project名"
    },
    "tags": {
      "type": "string",
      "description": "Tags of the library",
      "x-prompt": "tag，用英文逗号分隔，可留空"
    }
  },
  "required": ["name", "type"]
}
