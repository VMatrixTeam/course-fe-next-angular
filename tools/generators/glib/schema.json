{
  "cli": "nx",
  "id": "glib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "此库的名称",
      "pattern": "^[a-zA-Z]{1}.*$"
    },
    "directory": {
      "type": "string",
      "description": "Directory to the library",
      "x-prompt": "此库的所属文件夹"
    },
    "scope": {
      "type": "string",
      "description": "Scope of the library"
    },
    "type": {
      "type": "string",
      "description": "Type of the library",
      "enum": ["data-access", "feature", "ui", "util"],
      "x-prompt": {
        "message": "此库的类型",
        "type": "list",
        "items": [
          {
            "value": "data-access",
            "label": "数据访问 (data-access)"
          },
          {
            "value": "feature",
            "label": "特性 (feature)"
          },
          {
            "value": "ui",
            "label": "纯UI (ui)"
          },
          {
            "value": "util",
            "label": "工具 (util)"
          }
        ]
      }
    },
    "tags": {
      "type": "string",
      "description": "Tags of the library",
      "x-prompt": "此库的 tag，用英文逗号分隔"
    }
  },
  "required": ["name", "directory", "scope", "type"]
}
